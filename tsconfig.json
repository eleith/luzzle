{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "composite": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@app/gql": ["generated/gql"],
      "@app/prisma": ["generated/prisma/client"],
      "@app/lib/*": ["src/lib/*"],
      "@app/common/*": ["src/common/*"],
      "@app/public/*": ["public/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "jsxImportSource": "theme-ui"
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "tsconfig.json", "jest.config.ts"],
  "exclude": ["node_modules", "build"]
}
