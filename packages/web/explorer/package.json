{
	"name": "@luzzle/web",
	"version": "0.0.100",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"prebuild": "npm run build:theme && npm run sync:content",
		"build:production": "npm run build && npm prune --omit=dev",
		"build:lock": "npm i --package-lock-only --workspaces=false",
		"build:theme": "npx --no-workspaces luzzle-tools theme --config ./config.yaml > src/lib/ui/styles/theme.build.css",
		"build:theme:minify": "npx --no-workspaces luzzle-tools theme --config ./config.yaml --minify > src/lib/ui/styles/theme.build.css",
		"preview": "vite preview",
		"check": "npm run prebuild && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check:config": "npx --no-workspaces luzzle-tools validate --config ./config.yaml",
		"sync:content": "node ./scripts/set-piece-types.js && node ./scripts/sync-content.js && node ./scripts/sync-components.js",
		"sync:types": "node ./scripts/set-piece-types.js",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"tag": "node ./scripts/tag.js"
	},
	"engines": {
		"node": ">=20"
	},
	"repository": {
		"type": "git",
		"url": "git+https://git.eleith.com/eleith/eleith.git"
	},
	"devDependencies": {
		"@iconify-json/ph": "1.2.2",
		"@sveltejs/adapter-node": "5.3.2",
		"@sveltejs/enhanced-img": "0.8.1",
		"@sveltejs/kit": "2.43.0",
		"@sveltejs/vite-plugin-svelte": "6.2.0",
		"@types/eslint": "9.6.1",
		"@types/mdast": "4.0.4",
		"@types/node": "22.12.0",
		"@types/unist": "3.0.3",
		"eslint": "9.18.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-svelte": "3.9.3",
		"feedsmith": "2.1.0",
		"globals": "15.14.0",
		"prettier": "3.4.2",
		"prettier-plugin-svelte": "3.3.2",
		"svelte": "5.39.4",
		"svelte-check": "4.3.2",
		"typescript": "5.7.3",
		"typescript-eslint": "8.19.1",
		"unist-util-remove": "4.0.0",
		"unplugin-icons": "22.3.0",
		"vite": "7.1.7",
		"yaml": "2.7.0"
	},
	"type": "module",
	"dependencies": {
		"@luzzle/core": "0.0.23",
		"@luzzle/tools": "0.0.56",
		"better-sqlite3": "11.7.2",
		"bits-ui": "2.14.1",
		"devlop": "1.1.0",
		"hastscript": "9.0.1",
		"kysely": "0.27.5",
		"mdast-util-to-string": "4.0.0",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-pretty-code": "^0.14.1",
		"rehype-raw": "^7.0.0",
		"rehype-slug": "^6.0.0",
		"rehype-stringify": "^10.0.1",
		"remark-directive": "4.0.0",
		"remark-gemoji": "^8.0.0",
		"remark-gfm": "^4.0.1",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.2",
		"sharp": "0.33.5",
		"unified": "^11.0.5"
	}
}
