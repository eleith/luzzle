{
  "title": "Game",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "pattern": "^(http|https)://"
    },
    "type": {
      "type": "string",
      "enum": [
        "video",
        "board"
      ]
    },
    "publisher": {
      "type": "string"
    },
    "developer": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "keywords": {
      "type": "string"
    },
    "representative_image": {
      "type": "string",
      "format": "asset"
    },
    "date_published": {
      "type": "string",
      "format": "date"
    },
    "date_played": {
      "type": "string",
      "format": "date"
    },
    "play_time": {
      "type": "integer"
    },
    "number_of_players": {
      "type": "integer"
    },
    "played_on": {
      "type": "string",
      "enum": [
        "xbox 360",
        "switch",
        "android",
        "nes",
        "snes",
        "gamecube",
        "wii",
        "gameboy",
        "gameboy advance sp",
        "ds",
        "steam",
        "n64",
        "pc",
        "playstation 5",
        "irl",
        "web",
        "stadia"
      ]
    }
  },
  "required": [
    "title",
    "type"
  ],
  "additionalProperties": true
}
