    "@types/react": "^18",
    "@typescript-eslint/eslint-plugin": "5.39.0",
    "@typescript-eslint/parser": "5.39.0",
    "eslint": "8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "@googleapis/books": "^0.3.1",
    "@luzzle/core": "0.0.2",
    "@resvg/resvg-js": "2.4.1",
    "feed": "4.2.2",
    "got": "12.5.1",
    "openai": "3.2.1",
    "react": "^18",
    "satori": "0.10.0",
    "sharp": "0.33.1",
    "yargs": "17.6.0"
  },
  "type": "module"
