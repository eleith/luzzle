{
	"name": "@luzzle/tools",
	"version": "0.0.38",
	"author": "eleith",
	"scripts": {
		"lint": "eslint src",
		"compile": "tsc --noEmit",
		"build:assets": "cp -r ./src/commands/opengraph/templates/ ./dist/src/commands/opengraph && cp -r ./src/lib/config ./dist/src/lib",
		"build:types": "json2ts --input src/lib/config/schema.json --output src/lib/config/schema.ts",
		"build:executable": "chmod +x ./dist/src/cli.js",
		"build:config-defaults": "npx yaml --json --indent 2 --single < ./src/lib/config/defaults.yaml > ./src/lib/config/defaults.json",
		"prebuild": "npm run build:types && npm run build:config-defaults",
		"postbuild": "npm run build:assets && npm run build:executable",
		"build": "tsc",
		"test": "vitest run --silent --coverage"
	},
	"engines": {
		"node": ">=20"
	},
	"bin": {
		"luzzle-tools": "./dist/src/cli.js"
	},
	"files": [
		"dist/*",
		"package.json"
	],
	"repository": {
		"type": "git",
		"url": "git+https://git.eleith.com/eleith/luzzle.git"
	},
	"homepage": "https://git.eleith.com/eleith/luzzle.git",
	"description": "misc scripts for working with luzzle related files and projects",
	"exports": {
		".": {
			"types": "./dist/src/sdk.d.ts",
			"import": "./dist/src/sdk.js"
		},
		"./browser": {
			"types": "./dist/src/browser.d.ts",
			"import": "./dist/src/browser.js"
		}
	},
	"devDependencies": {
		"@types/eslint": "9.6.1",
		"@types/node": "22.12.0",
		"@types/yargs": "17.0.13",
		"@vitest/coverage-v8": "3.2.4",
		"eslint": "9.22.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-prettier": "5.2.1",
		"globals": "16.0.0",
		"json-schema-to-typescript": "15.0.4",
		"prettier": "3.2.5",
		"typescript": "5.7.3",
		"typescript-eslint": "8.19.1",
		"vite": "7.1.7",
		"vitest": "3.2.4"
	},
	"dependencies": {
		"@luzzle/cli": "0.0.118",
		"@luzzle/core": "0.0.22",
		"eta": "3.5.0",
		"lightningcss": "^1.30.2",
		"node-vibrant": "4.0.3",
		"puppeteer": "24.19.0",
		"sharp": "0.33.5",
		"yaml": "^2.7.0",
		"yargs": "17.6.0"
	},
	"type": "module"
}
