		"luzzle-fetch-link": "dist/fetch-link/index.js",
		"luzzle-generate-img-og": "dist/generate-img-og/index.js",
		"luzzle-generate-img-variants": "dist/generate-img-variants/index.js",
		"luzzle-generate-rss": "dist/generate-rss/index.js"
	},
  "files": [
