{
  "name": "@luzzle/cli",
  "version": "0.0.123",
  "author": "eleith",
  "scripts": {
    "lint": "eslint src",
    "compile": "tsc --noEmit",
    "build": "tsc && chmod +x dist/src/index.js",
    "postbuild": "sed -i \"s/'unbuilt'/$(npm pkg get version --workspaces=false)/\" dist/src/version.js",
    "test": "vitest run --silent --coverage"
  },
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "luzzle": "./dist/src/index.js"
  },
  "files": [
    "dist/*",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://git.eleith.com/eleith/eleith.git"
  },
  "homepage": "https://git.eleith.com/eleith/eleith.git",
  "main": "./dist/src/sdk.js",
  "types": "./dist/src/sdk.d.ts",
  "description": "manage folders of markdown files for building luzzle sites",
  "devDependencies": {
    "@types/async": "3.2.24",
    "@types/eslint": "9.6.1",
    "@types/lodash-es": "4.17.12",
    "@types/node": "22.12.0",
    "@types/yargs": "17.0.33",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "9.22.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "globals": "16.0.0",
    "lodash-es": "4.17.21",
    "prettier": "3.4.2",
    "typescript": "5.7.3",
    "typescript-eslint": "8.19.1",
    "vite": "7.1.7",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "@luzzle/core": "0.0.31",
    "conf": "13.1.0",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0",
    "yaml": "2.7.0",
    "yargs": "17.7.2"
  },
  "type": "module"
}
