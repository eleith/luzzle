{
  "name": "@luzzle/cli",
  "version": "0.0.71",
  "author": "eleith",
  "scripts": {
    "lint": "eslint src",
    "compile": "tsc --noEmit",
    "build": "tsc -p tsconfig.build.json && chmod +x dist/src/index.js",
    "postbuild": "sed -i \"s/'unbuilt'/$(npm pkg get version --workspaces=false)/\" dist/src/version.js",
    "test": "vitest run --silent --coverage"
  },
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "luzzle": "dist/src/index.js"
  },
  "files": [
    "dist/*",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://git.eleith.com/eleith/eleith.git"
  },
  "homepage": "https://git.eleith.com/eleith/eleith.git",
  "main": "dist/manager.js",
  "description": "manage folders of markdown files for building luzzle sites",
  "devDependencies": {
    "@types/async": "^3.2.15",
    "@types/node": "18.8.3",
    "@types/yargs": "17.0.13",
    "@typescript-eslint/eslint-plugin": "7.7.1",
    "@typescript-eslint/parser": "7.7.1",
    "@vitest/coverage-v8": "1.5.2",
    "@vitest/ui": "1.5.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "prettier": "3.2.5",
    "typescript": "5.4.5",
    "vite": "^4.1.4",
    "vitest": "1.5.2"
  },
  "dependencies": {
    "@luzzle/core": "0.0.3",
    "@paralleldrive/cuid2": "2.2.0",
    "@sindresorhus/slugify": "2.2.0",
    "@types/lodash-es": "4.17.7",
    "async": "^3.2.4",
    "conf": "11.0.1",
    "file-type": "^18.0.0",
    "got": "12.5.1",
    "lodash-es": "4.17.21",
    "mdast-util-to-markdown": "^1.3.0",
    "pino": "8.6.1",
    "pino-pretty": "9.1.1",
    "tempy": "^3.0.0",
    "yaml": "2.1.3",
    "yargs": "17.6.0"
  },
  "type": "module"
}
