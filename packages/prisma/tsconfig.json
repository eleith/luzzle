{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "composite": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": false,
    "outDir": "build",
    "baseUrl": "."
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["**/*.ts"],
  "exclude": ["dist"]
}
